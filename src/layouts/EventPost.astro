---
import type { RawCalendarEvent } from "../components/calendar";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import { DateTime } from "luxon";

type Props = {
    title: string;
    description: string;
    headerImage: string;
    locationAddress: string;
    locationName: string;
    locationMap: string;
    locationLink: string;
    locationWebsite: string;
    canceled: boolean;
    missed: boolean;
    interval: {
        start: DateTime;
        end: DateTime;
    };
};

const {
    title,
    description,
    headerImage,
    locationAddress,
    locationName,
    locationMap,
    locationLink,
    locationWebsite,
    canceled,
    missed,
    interval: { start, end },
} = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            main {
                width: calc(100% - 2em);
                max-width: 100%;
                margin: 0;
            }
            .hero-image {
                width: 100%;
            }
            .hero-image img {
                display: block;
                margin: 0 auto;
                border-radius: 12px;
                box-shadow: var(--box-shadow);
            }
            .prose {
                width: 720px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 1em;
                color: rgb(var(--gray-dark));
            }
            .title {
                margin-bottom: 1em;
                padding: 1em 0;
                text-align: center;
                line-height: 1;
            }
            .title h1 {
                margin: 0 0 0.5em 0;
            }
            .date {
                margin-bottom: 0.5em;
                color: rgb(var(--gray));
            }
            .last-updated-on {
                font-style: italic;
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <article>
                <div class="hero-image">
                    {
                        headerImage && (
                            <img
                                width={1020}
                                height={510}
                                src={headerImage}
                                alt=""
                            />
                        )
                    }
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <div>
                                {start.toLocaleString(DateTime.DATETIME_MED)} -
                                {end.toLocaleString(DateTime.DATETIME_MED)}
                            </div>
                            <!-- TODO: make a location component that looks nice no matter the inputs -->
                            <div class="location">
                                {
                                    locationName && (
                                        <div class="name">{locationName}</div>
                                    )
                                }
                                {
                                    locationMap ? (
                                        <a class="address" href={locationMap}>
                                            {locationAddress}
                                        </a>
                                    ) : (
                                        <div class="address">
                                            {locationAddress}
                                        </div>
                                    )
                                }
                            </div>
                            <h1>{title}</h1>
                            <hr />
                        </div>
                        <slot />
                    </div>
                </div>
            </article>
            <Footer />
        </main>
    </body>
</html>
